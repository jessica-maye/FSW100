<h1>Responsive Design Part II</h1>
    
    <!--Mobile first-->
   
    <div id="box8">
        <h1>Dark Green</h1>
    </div>
    <div id="box9">
        <h1>Orange</h1>
    </div>
    

    
    #box{
        border: 2px dotted #90ee90;
    }
    #box > h1 {
        background-color: #82a
    }
    
    /*larger phones */
    @media only screen and (min-width:400px) {
        #box{
            border: 2px solid green;
        }
        #box > h1 {
            background-color: #ffff00;
        }
    }
    
/* Tablet */
@media only screen and (min-width:650px) {

#box8{
    border: 1px solid rgb(245, 241, 240);
}
#box8 > h1 {
    background-color: darkgreen;
}
#box9{
    border: 1px solid rgb(245, 241, 240);
}
#box9 > h1 {
    background-color: orange;
}
}

